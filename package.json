{
  "name": "vs-code-toggl-extension",
  "displayName": "Toggl for VS Code",
  "description": "Track your working hours in Toggl directly in your VS Code.",
  "author": "Stefan Natter",
  "publisher": "natterstefan",
  "license": "MIT",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist && rimraf dist-test",
    "build": "npm run clean && babel ./src --ignore **/*.test.js --out-dir dist && babel test --out-dir dist-test",
    "lint-fix": "eslint --fix ./src",
    "lint": "eslint ./src",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "pretest": "npm run build",
    "test": "cross-env CODE_TESTS_WORKSPACE=test-project CODE_TESTS_PATH=${INIT_CWD}/dist-test node ./node_modules/vscode/bin/test"
  },
  "engines": {
    "vscode": "^1.27.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:toggl.sayHello"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Toggl",
        "command": "toggl.sayHello",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Toggl",
      "properties": {
        "toggl.apiKey": {
          "type": "string",
          "description": "Your toggl.com API Key. You can get it from here: https://www.toggl.com/app/profile"
        },
        "toggl.defaultProjectId": {
          "type": "integer",
          "description": "Default project (client) id for each created task. Note: currently it is not possible to select from a list of projects."
        },
        "toggl.hoursPerWeek": {
          "type": "integer",
          "default": 40,
          "description": "Number of hours you have to work each week."
        },
        "toggl.pollingTimeout": {
          "type": "integer",
          "default": 10,
          "description": "Number of seconds between polling current time entry data from Toggl. To not run into the API rate limit it cannot be below 10 seconds."
        },
        "toggl.text": {
          "type": "string",
          "default": "Hello World :)",
          "description": "Text"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "npm run lint-fix",
      "git update-index --again"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natterstefan/vscode-toggl-extension.git"
  },
  "bugs": {
    "url": "https://github.com/natterstefan/vscode-toggl-extension/issues"
  },
  "homepage": "https://github.com/natterstefan/vscode-toggl-extension#readme",
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "babel-jest": "24.1.0",
    "cross-env": "5.2.0",
    "eslint": "5.14.1",
    "eslint-config-ns": "0.3.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-environment-node": "24.0.0",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "source-map-support": "0.5.10"
  },
  "dependencies": {
    "moment": "2.24.0",
    "toggl-api": "1.0.1",
    "vscode": "1.1.30"
  }
}
